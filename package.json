{
  "name": "responsive-snap",
  "version": "2.0.0",
  "description": "This is a figma plugin that help figma user to get the screenshot of a website with different device size.",
  "license": "MIT",
  "author": "Kevin Shiuan",
  "main": "code.js",
  "scripts": {
    "build": "npm run build:ui && npm run build:main -- --minify",
    "build:main": "esbuild src/plugin/code.ts --bundle --outfile=dist/code.js",
    "build:ui": "npx vite build --minify esbuild --emptyOutDir=false",
    "build:watch": "concurrently -n widget,iframe \"npm run build:main -- --watch\" \"npm run build:ui -- --watch\"",
    "dev": "concurrently -n tsc,build,vite 'npm:tsc:watch' 'npm:build:watch' 'vite'",
    "tsc": "npm run tsc:main && npm run tsc:ui",
    "tsc:main": "tsc --noEmit -p plugin-src",
    "tsc:ui": "tsc --noEmit -p ui-src",
    "tsc:watch": "concurrently -n widget,iframe \"npm run tsc:main -- --watch --preserveWatchOutput\" \"npm run tsc:ui -- --watch --preserveWatchOutput\""
  },
  "lint-staged": {
    "src/**/*.{css,json,md}": [
      "prettier --write"
    ],
    "src/**/*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@figma/plugin-typings": "*",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.16",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.7",
    "eslint": "8.56.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "postcss": "^8.4.38",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.2",
    "vite": "^5.2.11",
    "vite-plugin-singlefile": "^0.13.5",
    "vite-svg-loader": "^5.1.0"
  }
}